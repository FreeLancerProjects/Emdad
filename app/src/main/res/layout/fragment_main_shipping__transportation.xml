<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activites_Fragments.Fragments.Fragment_Main_Shipping_Transportation"
    android:background="@color/gray0"
    android:clickable="true"
    android:focusable="true"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        >


        <ImageView
            android:id="@+id/upgrade_company_toolbar_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo_login"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/upgrade_company_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/shipping_and_transportation"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textColor="@color/yellow1"
            />
        <ImageView
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_left_arrow"
            android:padding="10dp"
            android:layout_gravity="end"

            />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/lin_bubblebar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gray2"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="20dp"
            android:src="@drawable/ic_cross_out" />

        <com.xw.repo.BubbleSeekBar
            android:id="@+id/buble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:enabled="false"
            app:bsb_bubble_color="@color/yellow1"
            app:bsb_second_track_color="@color/yellow1"
            app:bsb_section_count="4"
            app:bsb_show_section_mark="true"
            app:bsb_thumb_color="@color/yellow1"
            app:bsb_track_color="@color/white"
            app:bsb_track_size="5dp"

            />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_shipping_transportation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lin_bubblebar" />

</androidx.constraintlayout.widget.ConstraintLayout>