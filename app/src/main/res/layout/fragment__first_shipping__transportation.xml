<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activites_Fragments.Fragments.Fragment_First_shipping_Transportation"
    android:background="@color/gray0"
    android:clickable="true"
    android:focusable="true"
    android:fillViewport="true"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <TextView
      android:id="@+id/txt_shipping_type"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      android:text="@string/what_kind_of_truck_do_you_need"
      android:textSize="16sp"
      android:padding="10dp"
      android:textColor="@color/black"
      />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_ship"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintBottom_toTopOf="@+id/shipping_view"
        app:layout_constraintTop_toBottomOf="@+id/txt_shipping_type"
        android:layout_marginTop="30dp"
        ></androidx.recyclerview.widget.RecyclerView>
    <View
        android:id="@+id/shipping_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/rec_ship"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@color/gray2"

        />
    <TextView
        android:id="@+id/txt_load_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/shipping_view"
        android:text="@string/choose_the_type_of_load"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:padding="10dp"

        />
    <LinearLayout

        android:id="@+id/lin_load_type"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/linear_shape"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/txt_load_type"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/loadtype"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"

            />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
           >
    </Spinner>

    </LinearLayout>
    <TextView
        android:id="@+id/txt_shipping_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lin_load_type"
        android:text="@string/number_of_trucks"
        android:gravity="end"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:padding="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />
  <LinearLayout

      android:id="@+id/lin_number_of_trucks"
      android:layout_width="150dp"
      android:layout_height="35dp"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:background="@drawable/linear_shape"
      android:orientation="horizontal"
      app:layout_constraintTop_toBottomOf="@+id/txt_shipping_numbers"
      app:layout_constraintEnd_toEndOf="parent"

      >

    <Spinner
        android:id="@+id/spinner_shipping_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >


    </Spinner>
  </LinearLayout>
    <Button
        android:id="@+id/next_shipping"
        android:layout_width="180dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/lin_number_of_trucks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/button2_shape"
        android:text="@string/next"
        android:textColor="@color/yellow1"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintVertical_bias="1"
        />
</androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>